<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane styleClass="background-form" stylesheets="@../resources/css/sceneTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestorcitas.controllers.DoctorsTabController">
    <top>
        <HBox alignment="CENTER_RIGHT" prefHeight="48.0" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="tabTitle">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <TextField fx:id="searchBox" onAction="#onSearch" prefHeight="35.0" prefWidth="190.0" promptText="%tab.doctors.search.prompt" styleClass="text-id-sub">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#onSearch" prefHeight="35.0" styleClass="neutralButton" text="%generic.search">
                    <HBox.margin>
                        <Insets right="24.0" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </HBox>
    </top>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
            <children>
                <Button fx:id="showBtn" disable="true" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onShow" prefHeight="35.0" styleClass="neutralButton" text="%generic.show">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onAdd" prefHeight="35.0" styleClass="nextButton" text="%generic.add">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
                <Button fx:id="removeBtn" disable="true" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onRemove" prefHeight="35.0" styleClass="cancelButton" text="%generic.remove">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </right>
    <center>
        <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="text-id-table" tableMenuButtonVisible="true" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="photoColumn" editable="false" maxWidth="70.0" minWidth="-Infinity" prefWidth="70.0" resizable="false" sortable="false" text="%table.person.photo" />
                <TableColumn fx:id="idColumn" editable="false" minWidth="-1.0" prefWidth="100.0" text="%table.person.id" />
                <TableColumn fx:id="nameColumn" editable="false" minWidth="-1.0" prefWidth="200.0" text="%table.person.name" />
                <TableColumn fx:id="phoneColumn" editable="false" minWidth="-1.0" prefWidth="110.0" text="%table.person.phone" />
                <TableColumn prefWidth="75.0" text="%table.doctor.visit">
                    <columns>
                        <TableColumn fx:id="visitDaysColumn" editable="false" minWidth="-1.0" prefWidth="90.0" text="%table.doctor.visitDays" />
                        <TableColumn fx:id="visitTimeColumn" editable="false" minWidth="-1.0" prefWidth="100.0" text="%table.doctor.visitHours" />
                    </columns>
                </TableColumn>
                <TableColumn fx:id="roomColumn" editable="false" minWidth="-1.0" prefWidth="100.0" text="%table.doctor.room" />
            </columns>
            <BorderPane.margin>
                <Insets bottom="15.0" left="15.0" />
            </BorderPane.margin>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onShow" text="%generic.show" />
                        <MenuItem mnemonicParsing="false" onAction="#onRemove" text="%generic.remove" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
    </center>
</BorderPane>
